# Flask API 配置
app:
  host: '0.0.0.0'
  port: 8000
  debug: false

# Redis 配置
redis:
  host: 'localhost'
  port: 6379
  db: 0
  password: null
  queue_key: 'xttsv2:voice-clone'
  upload_queue_key: 'xttsv2:voice-clone-result'
  max_connections: 5

# Cloudflare R2 配置
r2:
  access_key_id: ''
  secret_access_key: ''
  bucket_name: ''
  endpoint_url: ''
  public_url: ''

# 语音克隆配置（使用 video_tts API）
voice_clone:
  # 输出目录
  output_dir: 'outputs_v2'
  # 临时文件目录
  temp_dir: 'temp'
  # 设备类型：null 表示自动检测，可指定 'cuda' 或 'cpu'
  device: null
  # 支持的语言列表（直接使用语言代码，如 'en', 'zh', 'ja' 等）
  supported_languages:
    - en
    - es
    - fr
    - zh
    - ja
    - ko
    - de

task:
  max_retries: 3
  timeout: 600  # 秒
  cleanup_after_upload: true

jwt:
  secret_key:
  algorithm: HS256
  expiration_seconds: 3600
